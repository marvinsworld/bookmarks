{
  "manifest_version": 2,
  "name": "Eason's Bookmarks",
  "description": "Eason的书签插件,替代chrome的同步插件",
  "version": "1.0",
  "icons": {
    "48": "bookmark.png"
  },
  "background": {
    "scripts": [
      "jquery.min.js",
      "json2.js",
      "syncBookmarks.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "bookmark.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "bookmarks",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}